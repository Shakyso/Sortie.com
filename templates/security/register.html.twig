
{% extends 'base.html.twig' %}

{% block title %}Register !{% endblock %}

{% block body %}
    <form method="post">

        <div class="container profil-container" style="width: 60%">
            <h1 class="profil-title">Inscription</h1>


            <div class="row">
                <div class="col-12 col-xs-12 col-sm-12 col-md-6">
                    <label for="inputNomComplet" class="sr-only">Pseudo </label>
                    <input type="text" name="nomComplet" id="inputNomComplet" class="form-control" placeholder="Pseudo" required autofocus>
                </div>

                <div class="col-12 col-xs-12 col-sm-12 col-md-6">
                    <label for="inputPassword" class="sr-only">Mot de passe </label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Mot de passe" required>
                </div>
            </div>


            <div class="container" style="margin-top: 25px;">
                <div class="row">
                    <div class="col text-center">
                        <button class="btn btn-lg btn-primary " type="submit">
                            S'inscrire
                        </button>
                    </div>
                </div>
            </div>


        </div>


    </form>
{% endblock %}