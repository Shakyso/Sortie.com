{% extends 'base.html.twig' %}


{% block title %}Se Connecter{% endblock %}

{% block body %}

<main style="height: auto;">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}


        <div class="container profil-container">
            <h1 class="h3 mb-3 font-weight-normal profil-title">Se Connecter</h1>

            <div class="row">

                <div class="col-12 col-xs-12 col-sm-12 col-md-6">
                    <label for="inputUsername" class="sr-only">Username</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" placeholder="Username" required autofocus>
                </div>
                <div class="col-12 col-xs-12 col-sm-12 col-md-6">
                    <label for="inputPassword" class="sr-only">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>
                </div>

            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                </label>
            </div>

            <button class="btn btn-lg btn-primary" type="submit">
                Se Connecter
            </button>


        </div>









    </form>
</main>

{% endblock %}
